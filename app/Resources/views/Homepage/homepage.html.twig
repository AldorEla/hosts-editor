{% extends '::layout.html.twig' %}

{% block header %}
   <h1>Your Local Hosts Editor</h1>
{% endblock %}

{% block body %}
    <details class="display-block">Easy TOOL to add your local hosts in your Ubuntu distribution.</details>
    {% if hosts|length %}
        <p>These are your localhosts:</p>
        <div class="row no-margin">
            <div class="col-xs-6">
                <ul class="row no-margin">
                    <li class="col-xs-12 no-padding">
                        <div class="row no-margin">
                            <div class="col-xs-4">IP:</div>
                            <div class="col-xs-4">Host Name:</div>
                            <div class="col-xs-4">Action:</div>
                        </div>
                    </li>
                    {% for key, host in hosts %}
                        <li class="col-xs-12 no-padding">
                            <div class="row no-margin">
                                <div class="col-xs-4" class="js-host-ip">{{ host.ip }}<input type="text" class="hidden" value="" /></div>
                                <div class="col-xs-4" class="js-host-name">{{ host.name }}<input type="text" class="hidden" value="" /></div>
                                <div class="col-xs-4">
                                    <button id="{{ host.id }}" class="js-edit-host" data-edit-url="{{ url('ela_edit_host') }}">Edit</button>
                                </div>
                            </div>
                        </li>
                    {% else %}
                        <li class="col-xs-12 padding-vertical-10">There are no hosts added yet.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        
        <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.5/react.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.5/react-dom.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/0.3.2/marked.min.js"></script>-->
    {% endif %}
{% endblock %}

