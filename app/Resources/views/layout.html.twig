<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/vendor/flexboxgrid/flexboxgrid.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
        <script type="text/javascript" src="{{ asset('bundles/app/js/jquery-2.2.1.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/app/js/script.js') }}"></script>
    </head>
    <body>
        <header class="border-bottom-5">
            <div class="header-container">
                {% block header %}{% endblock %}
            </div>
        </header>

        <main>
            <div class="main-container">
                {% block body %}{% endblock %}
            </div>
        </main>

        <footer class="border-top-5">
            <div class="footer-container">
                {% block footer %}{% endblock %}
            </div>
        </footer>

        {% block javascripts %}{% endblock %}
    </body>
</html>
